{
  "name": "peertube-plugin-lightning",
  "description": "PeerTube plugin to integrate lighting transactions",
  "version": "4.3.0",
  "author": "DHK2",
  "license": "ISC",
  "bugs": "https://github.com/dhk2/peertube-plugin-lightning/issues",
  "clientScripts": [
    {
      "script": "dist/embed-client-plugin.js",
      "scopes": [
        "embed"
      ]
    },
    {
      "script": "dist/common-client-plugin.js",
      "scopes": [
        "common"
      ]
    },
    {
      "script": "dist/video-edit-client-plugin.js",
      "scopes": [
        "video-edit"
      ]
    } 
  ],
  "css": [
    "assets/style.css"
  ],
  "engine": {
    "peertube": ">=4.0.0"
  },
  "homepage": "https://github.com/dhk2/peertube-plugin-lightning",
  "keywords": [
    "peertube",
    "plugin",
    "lightning",
    "bitcoin"
  ],
  "library": "./main.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "node ./scripts/esbuild.js"
  },
  "staticDirs": {
    "images": "public/images"
  },
  "translations": {
    "fr-FR": "./languages/fr.json"
  },
  "devDependencies": {
    "esbuild": "^0.17.5",
    "esbuild-plugin-external-global": "^1.0.1"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "fs": "^0.0.1-security",
    "podcast-index-api": "^1.1.10",
    "qrious": "^4.0.2"
  }
}
